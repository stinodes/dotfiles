#!/bin/bash

function installed {
    stn-is-installed ghostty
}

function install {
    sudo pacman -S --noconfirm ghostty 
}

function uninstall {
    sudo pacman -R --noconfirm ghostty
}

function setup {
    target=$HOME/.config/ghostty
    stn-backup $target
    ln -nsf $STN_CONFIG_DIR/ghostty $target
}
