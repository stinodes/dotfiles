#!/bin/bash

function installed {
    stn-is-installed hyprland
    stn-is-installed hyprpaper
}

function install {
    sudo pacman -S --noconfirm hyprland hyprpaper > /dev/null
}

function uninstall {
    echo "This is a bad idea. Cancelling..."
}

function setup {
    mv $HOME/.config/hypr $HOME/.config/hypr.bak
    ln -nsf $STN_CONFIG_DIR/hypr $HOME/.config/hypr

    if [ ! -f $STN_CONFIG_DIR/hypr/monitors.conf ]; then
        echo "monitor=,preferred,auto,auto" >> $STN_CONFIG_DIR/hypr/monitors.conf
    fi
}
