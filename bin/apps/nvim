#!/bin/bash

function installed {
    stn-is-installed nvim
}

function install {
    sudo pacman -S --noconfirm neovim ripgrep fd 
}

function uninstall {
    sudo pacman -R --noconfirm neovim
}

function setup {
    target=$HOME/.config/nvim
    stn-backup $target
    ln -nsf $STN_CONFIG_DIR/nvim $HOME/.config/nvim
    ln -snf $STN_THEME_CURRENT/neovim.lua $STN_CONFIG_DIR/nvim/lua/plugins/theme.lua
}
