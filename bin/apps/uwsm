#!/bin/bash

function installed() {
    stn-is-installed uwsm
}

function install() {
    sudo pacman -S --noconfirm uwsm
}

function uninstall() {
    echo "This is a bad idea. Cancelling..."
}

function setup() {
    # mv $HOME/.config/uwsm $HOME/.config/uwsm.bak
    if [ ! -d ~/.config/uwsm ]; then
        mkdir ~/.config/uwsm
    fi
    ln -nsf $STN_CONFIG_DIR/uwsm/env ~/.config/uwsm/stn
    echo "source ~/.config/uwsm/stn" >> ~/.config/uwsm/env
}
