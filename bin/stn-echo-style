#!/bin/bash

red='\033[1;31m'
green='\033[1;32m'
yellow='\033[1;33m'
blue='\033[1;34m'
purple='\033[1;35m'
cyan='\033[1;36m'

nc='\033[0m' # No color

function get_color {
    case $1 in
        "red") echo $red;;
        "green") echo $green;;
        "yellow") echo $yellow;;
        "blue") echo $blue;;
        "purple") echo $purple;;
        "cyan") echo $cyan;;
        *) echo $nc;;
    esac
}

echo -e "$(get_color $1)${2}${nc}"

