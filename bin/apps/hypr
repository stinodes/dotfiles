#!/bin/bash

function installed {
    stn-is-installed hyprland
    stn-is-installed hyprpaper
    stn-is-installed hyprshot
}

function install {
    sudo pacman -S --noconfirm hyprland hyprpaper hyprshot
}

function uninstall {
    echo "This is a bad idea. Cancelling..."
}

function setup {
    target=$HOME/.config/hypr
    stn-backup $target
    ln -nsf $STN_CONFIG_DIR/hypr $target
    if [ ! -f $STN_CONFIG_DIR/hypr/hyprland/monitors.conf ]; then
        echo "monitor=,preferred,auto,auto" >> $STN_CONFIG_DIR/hypr/hyprland/monitors.conf
    fi
}
